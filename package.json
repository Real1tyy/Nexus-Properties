{
	"name": "nexus-properties",
	"version": "1.0.0",
	"description": "Automated property management plugin for Obsidian that syncs parent-child and related relationships bidirectionally with recursive tree properties.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -f main.js",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"keywords": [
		"obsidian",
		"properties",
		"plugin",
		"frontmatter",
		"relationships",
		"automation"
	],
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/Real1tyy"
	},
	"author": "Real1tyy",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"pnpm": {
		"overrides": {
			"obsidian": "1.8.7"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/node": "^24.3.0",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.10",
		"fast-check": "^4.3.0",
		"jsdom": "^25.0.1",
		"obsidian": "^1.8.7",
		"tslib": "2.8.1",
		"typescript": "5.9.2",
		"vitest": "^3.2.0"
	},
	"dependencies": {
		"@real1ty-obsidian-plugins/utils": "^2.0.1",
		"rxjs": "^7.8.2",
		"zod": "^4.1.5"
	}
}
